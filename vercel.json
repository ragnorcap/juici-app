{
  "version": 2,
  "buildCommand": "cd frontend && npm install react-app-rewired process stream-http https-browserify browserify-zlib stream-browserify url webpack && CI=false npm run build",
  "outputDirectory": "frontend/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "${REACT_APP_API_URL}",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "SUPABASE_URL": "${SUPABASE_URL}",
    "SUPABASE_KEY": "${SUPABASE_KEY}",
    "SUPABASE_SECRET": "${SUPABASE_SECRET}",
    "API_KEY": "${API_KEY}",
    "NODE_ENV": "production"
  },
  "regions": ["sfo1"],
  "github": {
    "silent": true
  }
} 