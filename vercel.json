{
  "version": 2,
  "builds": [
    { "src": "backend/src/index.ts", "use": "@vercel/node" },
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/index.ts" },
    { "src": "/static/(.*)", "dest": "frontend/build/static/$1" },
    { "src": "/(.+\\.[a-zA-Z0-9]{2,}$)", "dest": "frontend/build/$1" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "/api"
  }
} 