{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "frontend/build",
  "framework": null,
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x",
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/src/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "/api"
  }
} 