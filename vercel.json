{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.ts" },
    { "source": "/(.*)", "destination": "/frontend/build/index.html" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/build",
  "env": {
    "REACT_APP_API_URL": "/api",
    "NODE_ENV": "production"
  }
} 